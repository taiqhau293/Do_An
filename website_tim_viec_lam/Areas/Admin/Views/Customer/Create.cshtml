@using website_tim_viec_lam.Utilities;
@model website_tim_viec_lam.Models.Customer;

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm mới khách hàng</h2>
    </div>
    <!--Begin Form-->
    <form asp-action="Create" method="post">
        <div class="form-row">

            <div class="form-group col-md-6">
                <label asp-for="FullName">Họ và tên</label>
                <input type="text" class="form-control mb-3" asp-for="FullName">
                <span asp-validation-for="FullName" class="alert-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Email">Email</label>
                <input type="text" class="form-control mb-3" asp-for="Email">
                <span asp-validation-for="Email" class="alert-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Phone">Điện thoại</label>
                <input type="text" class="form-control mb-3" asp-for="Phone">
                <span asp-validation-for="Phone" class="alert-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="CCCD">Số CCCD</label>
                <input type="text" class="form-control mb-3" asp-for="CCCD">
                <span asp-validation-for="CCCD" class="alert-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Address">Địa chỉ</label>
                <input type="text" class="form-control mb-3" asp-for="Address">
                <span asp-validation-for="Address" class="alert-danger"></span>
            </div>

        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-fill"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash-fill"></i> Lưu lại
        </button>
    </form>
</main>

@{
    var summerNote = new website_tim_viec_lam.Areas.Admin.Models.Summernote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}
