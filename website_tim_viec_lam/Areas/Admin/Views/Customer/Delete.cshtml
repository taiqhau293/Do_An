@model website_tim_viec_lam.Models.Customer
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác Nhận Xóa Người Dùng </h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="CustomerID">CustomerID</label>
            <input type="text" class="form-control mb-3" asp-for="CustomerID" disabled>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="FullName">Họ và tên</label>
            <input type="text" class="form-control mb-3" asp-for="FullName" disabled>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Email">Email</label>
            <input type="text" class="form-control mb-3" asp-for="Email" disabled>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Phone">Điện thoại</label>
            <input type="text" class="form-control mb-3" asp-for="Phone" disabled>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="CCCD">Số CCCD</label>
            <input type="text" class="form-control mb-3" asp-for="CCCD" disabled>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Address">Địa chỉ</label>
            <input type="text" class="form-control mb-3" asp-for="Address" disabled>
        </div>
    </div>
    <!-- Begin Form -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CustomerID" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Quay Lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash-fill"></i> Xóa Người Dùng
        </button>
    </form>
    <!-- End Form -->
</main>